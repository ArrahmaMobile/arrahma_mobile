{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Get Packages",
            "type": "shell",
            "command": "dart pub get",
            "problemMatcher": [
                "$dart-pub-build_runner"
            ],
            "isBackground": true
        },
        {
            "label": "Run JSON Generator",
            "type": "shell",
            "command": "dart pub run build_runner watch --delete-conflicting-outputs",
            "dependsOn": [
                "Get Packages",
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": [
                "$dart-pub-build_runner"
            ],
            "isBackground": true
        }
    ]
}